{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",  
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "declaration": true,
  },
  "include": ["src/PinyinTools.ts"],
  "exclude": ["node_modules", "dist"]
}
